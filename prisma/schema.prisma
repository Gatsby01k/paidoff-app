generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl можно добавить позже, если захочешь:
  // directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  deposits     Deposit[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Deposit {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  amount    Float
  days      Int
  strategy  String
  createdAt DateTime @default(now())
}
